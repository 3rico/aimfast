FROM kernsuite/base:4
MAINTAINER <ramaila.jat@gmail.com>
RUN docker-apt-install \
    python3-setuptools \
    python3-numpy \
    python3-scipy \
    python3-astropy \
    python3-astlib \
    python3-pip
ADD . /code
WORKDIR /code
RUN pip3 install . -U
RUN pip3 install --upgrade keyrings.alt
RUN python3 -m pytest -s -vvv /code/
RUN aimfast --residual-image /code/aimfast/tests/files/cube1.fits --tigger-model /code/aimfast/tests/files/DR_catalog.txt --normality-test normaltest
